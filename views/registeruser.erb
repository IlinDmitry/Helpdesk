<h1 style="margin-left: 10px; margin-bottom: 20px;">Sign Up</h1>

<% if @params[:msg] != nil && @params[:msg] != '' %>
    <div class="alert alert-warning">
      <%= @params[:msg] %>
    </div>
<% end %>

<form method="post" action="#">
  <div class="col-6">
    <div class="form-group">
      <label>Username</label>
      <input name="id" required="required" class="form-control" />
    </div>
    <div class="form-group">
      <label>Password</label>
      <input name="pw" type="password" required="required" class="form-control" /><!-- pattern="^\+[0-9]{11,12}$" title="+971501545643"-->
    </div>
    <div class="form-group">
      <label>Confirm Password</label>
      <input name="confirmpw" type="password" required="required" class="form-control" /><!-- pattern="^\+[0-9]{11,12}$" title="+971501545643"-->
    </div>
    <div class="form-group">
      <label>Email</label>
      <input name="email" type="email" class="form-control" />
    </div>
    <div class="form-group">
      <label>Phone</label>
      <input name="phone" type="tel" class="form-control" />
    </div>
    <div class="form-group">
      <label>Display Name</label>
      <input name="display" id="field_display" type="text" class="form-control" />
    </div>
  </div>
  <div class="col-6">
  </div>
  <div>
    <input type="submit" value="Register" class="btn btn-primary" style="margin-left: 20px">
  </div>
</form>



