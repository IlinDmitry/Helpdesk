<h1 style="margin-top: 20px; margin-bottom: 20px;">Login</h1>

<% if @params[:msg] != nil && @params[:msg] != '' %>
    <div class="alert alert-warning">
      <%= @params[:msg] %>
    </div>
<% end %>

<form method="post" action="#" class="row">
  <div class="col-6">
    <div class="form-group">
      <label>User ID</label>
      <input name="id" required="required" class="form-control" />
    </div>
    <div class="form-group">
      <label>Password</label>
      <input name="pw" type="password" class="form-control" />
    </div>
    <div style="padding-top: 20px;">
      <input type="submit" value="Login" class="btn btn-primary" style="margin-right: 10px;">
      <a href="/forgot-password" class="btn btn-secondary" style="margin-right: 10px;">Forgot Password</a>
      <a href="/register-user" class="btn btn-secondary" style="margin-right: 10px;">Sign Up</a>
    </div>
  </div>

  <div class="col-6">
  </div>
</form>